<% if current_user %>
<%= will_paginate @things %>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @things) do |thing| %>
      <% if thing.user_id == current_user.id %>
            <td><%= thing.name %></td>
            <td><%= thing.description %></td>
            <td><%= link_to 'Show', thing,:class =>"btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_thing_path(thing),:class =>"btn btn-success" %></td>
        <td><%= link_to 'Destroy', thing,:class =>"btn btn-success", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%else%>
         <td><%= thing.name %></td>
            <td><%= thing.description %></td>
            <td><%= link_to 'Show', thing,:class =>"btn btn-success" %></td>
      
       <% end %>
      <% end %>
    </tbody>
  </table>
</div>
<%= will_paginate @things %>

 <%else%>
<%= will_paginate @things %>

 <div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, current_user.things.all) do |thing| %>
            <td><%= thing.name %></td>
            <td><%= thing.description %></td>
            <td><%= link_to 'Show', thing,:class =>"btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_thing_path(thing),:class =>"btn btn-success" %></td>
        <td><%= link_to 'Destroy', thing,:class =>"btn btn-success", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
<%= will_paginate @things %>
<%end%>
